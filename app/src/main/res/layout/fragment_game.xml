                android:layout_columnWeight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"

                android:text="M" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"

                android:text="N" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"

                android:text="Ń" />

