                android:text="Ź" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"

                android:text="Ż" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:layout_columnWeight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:drawableRight="@drawable/ic_coin"
                android:gravity="center|right"
                android:text="@{String.format(@string/show_letter_for_coins_button, com.bartekturkosz.hangman.ConstantsKt.PRICE_FOR_SHOW_LETTER)}" />
        </GridLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/img_content_description"
            app:layout_constraintBottom_toTopOf="@+id/letters"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>