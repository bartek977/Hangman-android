                android:layout_marginRight="2dp"

                android:text="O" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"

                android:text="Ó" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginLeft="2dp"
