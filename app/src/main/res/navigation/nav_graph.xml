<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/MainFragment"
        android:name="com.bartekturkosz.hangman.ui.MainFragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_MainFragment_to_GameFragment"
            app:destination="@id/GameFragment" />
        <action
            android:id="@+id/action_MainFragment_to_RankingFragment"
            app:destination="@id/RankingFragment" />
    </fragment>
    <fragment
        android:id="@+id/GameFragment"
        android:name="com.bartekturkosz.hangman.ui.GameFragment"
        tools:layout="@layout/fragment_game"/>
    <fragment
        android:id="@+id/RankingFragment"
        android:name="com.bartekturkosz.hangman.ui.RankingFragment">
    </fragment>
</navigation>